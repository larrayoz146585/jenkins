pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/larrayoz146585/jenkins.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    def startTime = System.currentTimeMillis()  // Obtén la hora de inicio
                    sh './build.sh'
                    def endTime = System.currentTimeMillis()    // Obtén la hora de finalización
                    def duration = (endTime - startTime) / 1000  // Calcula la duración en segundos
                    echo "Tiempo de ejecución del build: ${duration} segundos"
                    // Guardar el resultado en un archivo de reporte
                    writeFile file: 'build_time_report.txt', text: "Tiempo de ejecución del build: ${duration} segundos"
                }
            }
        }

        stage('Test') {
            steps {
                sh './test.sh'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado'
        }
    }
}
