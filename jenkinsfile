pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Obtén el código de la rama "feature" para CI
                git branch: 'feature', url: 'https://github.com/larrayoz146585/jenkins.git'
            }
        }
        stage('Fix Permissions') {
            steps {
                // Asegúrate de que los scripts tengan los permisos adecuados
                sh 'chmod +x ./build.sh'
                sh 'chmod +x ./test.sh'
            }
        }
        stage('Build') {
            steps {
                // Ejecuta el script de compilación
                sh './build.sh'
            }
        }
        stage('Test') {
            steps {
                // Ejecuta las pruebas del proyecto
                sh './test.sh'
            }
        }
    }

    post {
        always {
            echo 'Pipeline de CI finalizado'
        }
    }
}
