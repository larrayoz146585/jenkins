pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Clona la rama "feature" para CI
                git branch: 'feature', url: 'https://github.com/larrayoz146585/jenkins.git'
            }
        }

        stage('Fix Permissions') {
            steps {
                // Asegúrate de que los scripts tengan los permisos adecuados
                sh 'chmod +x ./build.sh'
                sh 'chmod +x ./test.sh'
            }
        }

        stage('Build') {
            steps {
                // Ejecuta el script de compilación
                sh './build.sh'
            }
        }

        stage('Test') {
            steps {
                // Ejecuta las pruebas del proyecto
                sh './test.sh'
            }
        }

        stage('Generate Report') {
            steps {
                script {
                    // Generar el informe con un KPI sencillo
                    def commitCount = sh(script: 'git log --since="2 weeks ago" --pretty=oneline | wc -l', returnStdout: true).trim()
                    def reportContent = """\
                    Informe del Pipeline:
                    =========================
                    Numero de commits en las ultimas dos semanas: ${commitCount}
                    Estado de las pruebas: Exitosas
                    """
                    
                    // Guardar el informe en un archivo
                    writeFile file: 'pipeline_report.txt', text: reportContent
                    archiveArtifacts artifacts: 'pipeline_report.txt', allowEmptyArchive: true
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado'
        }
    }
}
